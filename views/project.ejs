<%- layout('layouts/boilerplate') %>

<!-- work project section starts -->
<section class="work" id="work" data-aos="fade-in" data-aos-delay="300">

    <h2 class="heading"><i class="fas fa-laptop-code"></i> Projects <span>Made</span></h2>

    <div class="box-container">
        <% for(let project of projects) { %>
        <div class="box tilt" data-aos="fade-in" data-aos-duration="1000" data-aos-offset="200" data-tilt>
            <img draggable="false" src="<%=project.image%>" alt="Project Image" />
            <div class="content">
                <div class="tag">
                    <h3><%=project.name%> </h3>
                </div>
                <div class="desc">
                    <p><%=project.desc%> </p>
                    <div class="btns">
                        <a href="<%=project.links.view%>" class="btn" target="_blank"><i class="fas fa-eye"></i>
                            View</a>
                        <a href="<%=project.links.code%>" class="btn" target="_blank">Code <i
                                class="fas fa-code"></i></a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
    </div>
    <div class="backbtn">
        <a href="/" class="btn">
            <i class="fas fa-arrow-left"></i>
            <span>Back to Home</span>
        </a>
    </div>

</section>
<!-- work project section ends -->

<!-- scroll top btn -->
<a href="#work" class="fas fa-angle-up" id="scroll-top"></a>
<!-- scroll back to top -->